{
  "name": "terra-modal",
  "version": "0.0.1",
  "repository": "git@github.cerner.com:MB034780/terra-modal.git",
  "author": "Matt W Butler <matt.w.butler@cerner.com>",
  "license": "MIT",
  "homepage": "https://pages.github.cerner.com/MB034780/terra-modal/",
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-jest": "^18.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "gh-pages": "^0.12.0",
    "jest": "^18.1.0",
    "node-sass": "^4.3.0",
    "postcss-loader": "^1.2.2",
    "react-addons-test-utils": "^15.4.2",
    "sass-loader": "^4.1.1",
    "storyshots": "^3.2.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.1",
    "stylelint-config-sass-guidelines": "^1.1.1",
    "terra-legacy-theme": "^0.1.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "deploy": "build-storybook && gh-pages -d storybook-static",
    "lint": "yarn lint-js && yarn lint-scss",
    "lint-js": "eslint --ext .js,.jsx src",
    "lint-scss": "stylelint src/**/*.scss",
    "release:major": "yarn version major -m \"Released version %s\" && yarn publish && git push --follow-tags",
    "release:minor": "yarn version minor -m \"Released version %s\" && yarn publish && git push --follow-tags",
    "release:patch": "yarn version patch -m \"Released version %s\" && yarn publish && git push --follow-tags",
    "start": "start-storybook -p 8080",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "setupFiles": [
      "./test/jestsetup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/test/__mocks__/style_mock.js"
    }
  }
}
